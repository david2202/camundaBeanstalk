<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>zip</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>.ebextensions</directory>
            <outputDirectory>.ebextensions</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>org.camunda.bpm.webapp:camunda-webapp-tomcat</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <outputFileNameMapping>camunda.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.camunda.bpm:camunda-engine-rest</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <outputFileNameMapping>engine-rest.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>*:war</include>
            </includes>
            <excludes>
                <exclude>org.camunda.bpm.webapp:camunda-webapp-tomcat</exclude>
                <exclude>org.camunda.bpm:camunda-engine-rest</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.camunda.bpm:camunda-distro</include>
            </includes>
            <outputDirectory>/.ebextensions/tomcat</outputDirectory>
            <unpack>true</unpack>
            <unpackOptions>
                <includes>
                    <include>lib/*.jar</include>
                </includes>
            </unpackOptions>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>mysql:mysql-connector-java</include>
            </includes>
            <outputDirectory>/.ebextensions/tomcat/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>
